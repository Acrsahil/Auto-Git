# If not running interactively, don't do anything
[[ $- != *i* ]] && return


alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

alias ls='ls --color=auto'
alias vi='nvim'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '
. "$HOME/.cargo/env"
export BROWSER=firefox
export BROWSER=firefox

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
alias gmkdir='source /home/window/codehub/Python_Programming/githubautomation/myenv/bin/activate && pwd | python /home/window/codehub/Python_Programming/githubautomation/getpath.py && python /home/window/codehub/Python_Programming/githubautomation/main.py'
